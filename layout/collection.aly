{
  LinearLayout;
  orientation="vertical";
  gravity="center";
  layout_height="fill";
  layout_width="fill";
  {
    RelativeLayout;
    layout_height="match_parent";
    layout_width="match_parent";
    {
      ScrollView;
      layout_height="match_parent";
      id="collectionScroll";
      layout_width="match_parent";
      {
        LinearLayout;
        orientation="vertical";
        layout_height="wrap_content";
        layout_width="match_parent";
        {
          LinearLayout;
          orientation="vertical";
          layout_height="10dp";
          layout_width="match_parent";
        };
        {
          GridView;
          NumColumns="2";
          layout_marginLeft="10dp";
          layout_height="wrap_content";
          layout_marginRight="10dp";
          id="collectionGrid";
          layout_width="match_parent";
        };
        {
          LinearLayout;
          layout_height="80dp";
          layout_width="match_parent";
        };
      };
    };
    {
      LinearLayout;
      orientation="vertical";
      gravity="center";
      layout_height="match_parent";
      id="collectionLayout";
      layout_width="match_parent";
      {
        ImageView;
        layout_height="150dp";
        src="res/image/null-box.png";
        layout_width="150dp";
      };
      {
        TextView;
        textSize="20";
        gravity="center";
        text=[==[还没有收藏的工具呢~
（长按工具会出现收藏选项）]==];
        layout_marginTop="10dp";
        id="collectionTipText";
      };
    };
  };
};
